/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.userinfo-nickname::before{
  content: "您好～"
}
.phoneNumber_style{
  margin-top: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  width: 700rpx
}
.verstyle{
  font-size: 30rpx;
  width: 500rpx;
  height: 100rpx;
}
.userinfo-avatar-top{
  overflow:hidden;
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}